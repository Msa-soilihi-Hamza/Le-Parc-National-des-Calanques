# ===========================================
# CONFIGURATION BASE DE DONNÉES
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=le-parc-national-des-calanques
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# ===========================================
# AUTHENTIFICATION JWT - IMPORTANT !
# ===========================================
# GÉNÉREZ UNE CLÉ SECRÈTE UNIQUE (minimum 32 caractères)
# Utilisez : php -r "echo bin2hex(random_bytes(32));"
JWT_SECRET=changez-cette-cle-par-votre-propre-secret-jwt-de-32-caracteres-minimum-1234567890
JWT_ISSUER=parc-calanques.local
JWT_ACCESS_TTL=3600
JWT_REFRESH_TTL=2592000

# ===========================================
# CONFIGURATION EMAIL SMTP
# ===========================================
# Configurez ces valeurs avec vos propres paramètres SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=votre-email@gmail.com
SMTP_PASSWORD=votre-mot-de-passe-application
SMTP_FROM_EMAIL=votre-email@gmail.com
SMTP_FROM_NAME=Parc National des Calanques
SMTP_ENCRYPTION=tls
SMTP_DEBUG=0

# ===========================================
# CONFIGURATION APPLICATION
# ===========================================
APP_URL=http://localhost/Le-Parc-National-des-Calanques
APP_NAME=Parc National des Calanques
APP_ENV=development
APP_DEBUG=true

# ===========================================
# SERVICES EXTERNES (À CONFIGURER PLUS TARD)
# ===========================================
# Configuration Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Configuration PayPal
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ===========================================
# SÉCURITÉ
# ===========================================
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
CSRF_TOKEN_NAME=_token

# ===========================================
# INSTRUCTIONS POUR VOS CAMARADES
# ===========================================
# 1. Copiez ce fichier vers .env : copy .env.example .env
#
# 2. GMAIL - Configurez votre email :
#    - Activez l'authentification à deux facteurs sur Gmail
#    - Générez un mot de passe d'application : https://myaccount.google.com/apppasswords
#    - Remplacez SMTP_USERNAME et SMTP_FROM_EMAIL par votre email
#    - Remplacez SMTP_PASSWORD par le mot de passe d'application (pas votre mot de passe Gmail)
#
# 3. JWT - Générez votre clé secrète :
#    - Exécutez : php -r "echo bin2hex(random_bytes(32));"
#    - Remplacez JWT_SECRET par le résultat
#
# 4. BASE DE DONNÉES - Vérifiez vos paramètres :
#    - DB_HOST, DB_PORT, DB_NAME selon votre configuration WAMP/XAMPP
#    - DB_USERNAME et DB_PASSWORD selon vos paramètres MySQL
#
# 5. APP_URL - Adaptez selon votre environnement local